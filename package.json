{
    "name":        "validy",
    "description": "Nested objects validation with support of async validators",
    "version":     "0.0.1",

    "author": {
        "name":  "Dmitry Kirilyuk",
        "email": "gk.joker@gmail.com"
    },

    "repository": {
        "type": "git",
        "url":  "https://github.com/Jokero/validy.git"
    },

    "license": "MIT",

    "keywords": [
        "validation",
        "validate",
        "validator",
        "schema",
        "nested",
        "async"
    ],

    "engines": {
        "node": ">=4.0.0"
    },

    "devDependencies": {
        "browserify":          "13.0.1",
        "babel-preset-es2015": "6.6.0",
        "babelify":            "7.3.0",
        "uglify-js":           "2.6.2",
        "chai":                "3.5.0",
        "chai-as-promised":    "5.3.0",
        "mocha":               "2.4.5"
    },

    "scripts": {
        "test":       "mocha 'tests/**/*.js' --timeout 5000",
        "browserify": "browserify index.js --transform [ babelify --presets es2015 ] --standalone validy --outfile dist/validy.js",
        "minify":     "uglifyjs dist/validy.js --output dist/validy.min.js",
        "build":      "npm run browserify && npm run minify"
    }
}